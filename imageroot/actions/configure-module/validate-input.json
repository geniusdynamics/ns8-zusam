{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configure zusam",
    "$id": "http://nethserver.org/json-schema/task/input/zusam/configure-module",
    "description": "Configure zusam",
    "examples": [
        {
            "host": "zusam.domain.org",
            "http2https": true,
            "lets_encrypt": true,
            "init_user": "admin",
            "init_password": "admin",
            "init_group": "admin"
        }
    ],
    "type": "object",
    "required": [
        "host",
        "http2https",
        "lets_encrypt",
        "init_user",
        "init_password",
        "init_group"
    ],
    "properties": {
        "host": {
            "type": "string",
            "description": "Host name for the application, like 'zusam.domain.org'",
            "format": "hostname",
            "pattern": "\\."
        },
        "lets_encrypt": {
            "type": "boolean",
            "title": "Let's Encrypt certificate",
            "description": "Request a valid Let's Encrypt certificate."
        },
        "http2https": {
            "type": "boolean",
            "title": "HTTP to HTTPS redirection",
            "description": "Redirect all the HTTP requests to HTTPS"
        },
        "init_user": {
            "type": "string",
            "description": "Initial admin user",
            "default": "admin"
        },
        "init_password": {
            "type": "string",
            "description": "Initial admin password",
            "default": "admin"
        },
        "init_group": {
            "type": "string",
            "description": "Initial admin group",
            "default": "admin"
        }
    }
}